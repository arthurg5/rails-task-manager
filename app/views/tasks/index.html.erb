<div class="container">
  <div class="header">My tasks</div>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to "#{task.title}", task_path(task) %>
          <%= link_to "Delete", dt_task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <% end %>
  </ul>
  <%= link_to "Add new task", new_task_path %>
</div>
